<header class="navbar navbar-fixed-top navbar-dark bg-dark">


  <div class="container">

    <%= link_to "travel app", root_path, id: "logo" %>


    <nav>
      <ul class="nav  ">
        <li><%= link_to t('header.home'), root_path %></li>
        <li><%= link_to t('header.help'), help_path%></li>



        <% if logged_in? %>
          <ul class = "nav navbar-nav navbar-right">
            <li class = "dropdown">
              <a href = "#" class ="dropdown-toggle" data-toggle="dropdown" role="button"
                 aria-expanded="false"><%= t 'header.themes' %> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% Theme.all.each do |theme|%>
                  <li>
                    <%=link_to theme.id, display_theme_path%>
                  </li>
                <%end %>
              </ul>
            </li>
          </ul>


          <li><%= link_to t('header.profile'), current_user %></li>
          <li><%= link_to t('header.settings'), '#' %></li>
          <li><%= link_to t('header.log_out'), logout_path, method: "delete" %></li>

        <% else %>
          <li><%= link_to t('header.log_in'), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>

</header>